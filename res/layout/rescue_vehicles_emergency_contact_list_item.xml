<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="70dp"
	android:orientation="horizontal" >
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="70dp"
		android:gravity="left|center_vertical"
		android:orientation="horizontal" >
		<TextView
			android:id="@+id/rescue_vehicles_emergency_phone_name"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:gravity="left"
			android:textColor="@color/main_list_item_title"
			android:textSize="@dimen/main_settings_item_title" />
		<TextView
			android:id="@+id/rescue_vehicles_emergency_phone_number"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_weight="1"
			android:textColor="@color/main_list_item_detail"
			android:textSize="@dimen/main_settings_item_title" />
		<LinearLayout
			android:id="@+id/phone_ll"
			android:layout_width="wrap_content"
			android:layout_height="70dp"
			android:gravity="left|center_vertical" >
			<ImageView
				android:id="@+id/rescue_vehicles_emergency_phone_call"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="15dp"
				android:src="@drawable/phone_image" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>