<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_content_margin"
        android:layout_marginRight="@dimen/main_content_margin"
        android:orientation="vertical" >
        <TextView
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="5dip"
               android:layout_marginTop="3dip"
               android:layout_weight="1.50"
               android:gravity="center"
               android:textColor="@color/light_blue"
               android:textSize="16dip"
               android:text="@string/upc_device_activated"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/light_blue"
                android:textSize="12dip"
                android:text="@string/upc_diag_config_guide"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/sn_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginLeft="@dimen/main_content_margin"
        android:layout_marginRight="@dimen/main_content_margin"
        android:layout_marginTop="@dimen/main_content_margin"
        android:orientation="horizontal" >
	    <TextView
	        android:layout_marginLeft="10dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:textColor="@color/light_blue"
	        android:layout_weight="1.0"
	        android:text="@string/upc_device_serial_number" />
	    <TextView 
	        android:id="@+id/tv_serial_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:textColor="@color/light_blue"
	        android:layout_weight="2.0"
	        android:text="12345677990102"
	        android:singleLine="true"/>
    </LinearLayout>
    
   <TableLayout 
	    android:id="@+id/vin_area"
	    android:layout_below="@+id/sn_area"
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal">
	    <TableRow >
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:textColor="@color/light_blue"
		        android:text="@string/upc_vin_validation" />
		    <Button
			    android:id="@+id/btn_vin_help"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginRight="3dip"
			    android:textColor="@color/light_blue"
			    android:textSize="15dip"
			    android:text="*" />
		    <EditText 
		        android:id="@+id/edt_vin_input"
		        android:layout_width="150dip"
		        android:layout_height="wrap_content"
		        android:hint="@string/upc_please_input_vin_number_here"
		        android:singleLine="true"/>
			<Button
			    android:id="@+id/btn_vin_check"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginRight="3dip"
			    android:text="@string/upc_vin_check"
			    android:textColor="@color/light_blue"/>
	     </TableRow>
    </TableLayout>
    
    <ListView
       android:id="@+id/lv_choicelist"
       android:layout_below="@+id/vin_area"
       android:layout_above="@+id/bottom_area"
       android:scrollingCache="false"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"/>
<!-- 
	/**下载按钮**/
    <LinearLayout 
        android:id="@+id/download_area"
        android:layout_below="@+id/lv_choicelist"
        android:layout_above="@+id/bottom_area"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
	    android:layout_height="fill_parent">
		<Button
		    android:id="@+id/btn_download"
		    android:layout_width="50dip"
		    android:layout_height="50dip"
		    android:text="@string/upc_download"
		    android:visibility="gone"
		    android:textColor="@color/light_blue"/>
    </LinearLayout>
 -->    
    
    <LinearLayout
        android:id="@+id/bottom_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/main_content_margin"
        android:layout_marginLeft="@dimen/main_content_margin"
        android:layout_marginRight="@dimen/main_content_margin"
        android:orientation="horizontal">
            <Button
                android:id="@+id/bt_soft_configure_goback"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:layout_marginBottom="@dimen/main_content_margin"
       			android:layout_marginLeft="@dimen/main_content_margin"
        		android:layout_marginRight="47dip"
                android:background="@drawable/main_button"
                android:text="@string/diagconf_goback"
                android:textColor="@color/main_button_color"
                android:textSize="@dimen/main_textsize" />
            <Button
                android:id="@+id/bt_soft_configure_gonext"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:layout_marginBottom="@dimen/main_content_margin"
       			android:layout_marginLeft="@dimen/main_content_margin"
        		android:layout_marginRight="@dimen/main_content_margin"
                android:background="@drawable/main_button"
                android:text="@string/diagconf_confirm_config"
                android:textColor="@color/main_button_color"
                android:textSize="@dimen/main_textsize" />
    </LinearLayout>
</RelativeLayout>