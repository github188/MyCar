<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/manager_list_item_line_padding_bottom"
    android:paddingTop="@dimen/manager_list_item_line_padding_top" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:isScrollContainer="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/manager_oil_detail_oil_type"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="@dimen/manager_main_padding"
            android:text="油品"
            android:textColor="@color/manager_text"
            android:textSize="@dimen/manager_list_item_text_textsize" >
        </TextView>

        <TextView
            android:id="@+id/manager_oil_detail_amount"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:text="金额"
            android:textColor="@color/manager_text"
            android:textSize="@dimen/manager_list_item_text_textsize" >
        </TextView>

        <TextView
            android:id="@+id/manager_oil_detail_quantity"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:text="加油量"
            android:textColor="@color/manager_text"
            android:textSize="@dimen/manager_list_item_text_textsize" >
        </TextView>

        <TextView
            android:id="@+id/manager_oil_detail_mileage"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="right"
            android:text="里程"
            android:textColor="@color/manager_text"
            android:textSize="@dimen/manager_list_item_text_textsize" >
        </TextView>
        
        <ImageView
            android:id="@+id/oil_detail_edit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/manager_main_padding"
            android:layout_weight="3"
            android:src="@drawable/oil_detail_edit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:isScrollContainer="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/manager_oil_detail_datetime"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2011-11-28 19:28:28"
            android:layout_marginLeft="@dimen/main_list_item_margin_left"
            android:textSize="@dimen/manager_list_item_text_textsize"
            android:textColor="@color/main_list_item_detail" >
        </TextView>
    </LinearLayout>

</LinearLayout>