<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sp_detail_data_entry"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/manager_list_item_line_padding_bottom"
    android:paddingTop="@dimen/manager_list_item_line_padding_top" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:isScrollContainer="true"
        android:orientation="horizontal" >

        <TextView
            	android:id="@+id/sp_detail_data_stream_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingLeft="@dimen/manager_main_padding"
                android:text="@string/data_stream_name"
                android:textColor="@color/manager_text"
                android:textSize="13dp" >
            </TextView>

            <TextView
                android:id="@+id/sp_detail_data_stream_value"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="@string/data_stream_value"
                android:textColor="@color/manager_text"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/sp_detail_simple_report_maxvalue"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="@string/simple_report_maxvalue"
                android:textColor="@color/manager_text"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/sp_detail_simple_report_minvalue"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="10dip"
                android:text="@string/simple_report_minvalue"
                android:textColor="@color/manager_text"
                android:textSize="13dp" />

    </LinearLayout>
 <LinearLayout
     	android:id="@+id/simple_report_cause_help"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
		android:background="@color/deep_brown"
        android:visibility="gone"
        android:orientation="vertical" >
         <ImageView
                android:id="@+id/imageView2"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/manager_divider_height"
                android:layout_gravity="left"
                android:background="@drawable/main_divider" /> 
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
 	    android:gravity="center_vertical"
        android:orientation="horizontal" >
            <TextView
                android:id="@+id/simple_report_cause_result"           
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/manager_main_padding"
                android:textSize="13dp"
                android:text="@string/cause_result" />
 		    <TextView
                android:id="@+id/simple_report_cause_result_info"
                android:layout_toRightOf="@id/simple_report_cause_result"
                android:layout_marginLeft="2dp" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="" />
 		 	</LinearLayout>
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/manager_divider_height"
                android:layout_gravity="left"
                android:background="@drawable/main_divider" />
             <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
            <TextView
                android:id="@+id/simple_report_help_advise" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/manager_main_padding"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="@string/help_advise" />
            <TextView
                android:id="@+id/simple_report_help_advise_info"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="" />
           </LinearLayout>
        
    </LinearLayout>
</LinearLayout>