<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/im_list_item_height"
    android:paddingLeft="@dimen/main_list_item_padding_left"
    android:paddingRight="@dimen/main_list_item_padding_right"
    android:background="#FFFFFF"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageview_user_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:src="@drawable/userface_1" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/im_list_item_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/im_list_item_title"
                android:textSize="@dimen/im_list_item_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:textColor="@color/im_list_item_title"
                android:textSize="@dimen/im_list_item_title" />

            <TextView
                android:id="@+id/im_list_item_ccno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CC号"
                android:textColor="@color/im_list_item_title"
                android:textSize="@dimen/im_list_item_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textColor="@color/im_list_item_title"
                android:textSize="@dimen/im_list_item_title" />
        </LinearLayout>

        <TextView
            android:id="@+id/im_list_item_mood"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="无签名"
            android:textColor="@color/im_list_item_detail"
            android:textSize="@dimen/im_list_item_mini"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>