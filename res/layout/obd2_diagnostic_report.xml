<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="11" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="@drawable/bottom_bg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="诊断报告"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" >
        </TextView>

        <ImageButton
            android:id="@+id/diagnostic_titlebutton"
            android:layout_width="50dip"
            android:layout_height="30dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#00000000"
             >
        </ImageButton>

        <Button
            android:id="@+id/saveOBD2DiagnosticReport"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/clear_code_button"
            android:text="保存"
            android:textColor="@android:color/background_light" >
        </Button>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="10" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fadingEdge="vertical"
                android:scrollbars="vertical" >

                <TextView
                    android:id="@+id/reportShowTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="5dip"
                    android:scrollbars="vertical"
                    android:textColor="@color/black" >
                </TextView>
                <!-- android:textAppearance="?android:attr/textAppearanceMedium" -->
            </ScrollView>
        </LinearLayout>
        <!--
        <RelativeLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="9"
            android:background="@drawable/bottom_tetel" >

            <Button
                android:id="@+id/buttonSAVE1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/clear_code_button"
                android:text="保存诊断报告"
                android:textColor="@android:color/background_light" >
            </Button>
        </RelativeLayout>
        -->
    </LinearLayout>

</LinearLayout>