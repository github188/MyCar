<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageView 
	    android:id="@+id/update_center_menu_item_icon"
	    android:gravity="left"
	    android:layout_marginLeft="@dimen/main_list_item_margin_left"
	    android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
    <TextView 
	     android:id="@+id/update_center_menu_item_text"
	     android:layout_marginTop="10dip"
         android:layout_marginBottom="10dip"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:gravity="left"
	     android:layout_weight="1.0"
	     android:layout_marginLeft="8dip"
	     android:textColor="@color/black"
	     android:textSize="20dip"/>  
    <ImageView 
	    android:id="@+id/update_center_menu_triangle"
	    android:layout_marginRight="@dimen/main_list_item_margin_right"
	    android:layout_marginTop="18dip"
        android:layout_marginBottom="10dip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="right"
	    android:background="@drawable/upc_list_triangle"/>
 </LinearLayout>