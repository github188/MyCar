<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/select_versiontitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:gravity="center" >
        <TextView
            android:id="@+id/select_version_title"
            android:layout_width="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="22dip"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/select_version_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
		<Button
            android:id="@+id/select_version_fast_diag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/main_button_color"
            android:background="@drawable/main_button"
            android:textSize="@dimen/main_button_textsize"
            android:visibility="visible"
            android:text="@string/dialog_ok" />
        <Button
            android:id="@+id/select_version_ok"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/main_button_color"
            android:background="@drawable/main_button"
            android:textSize="@dimen/main_button_textsize"
            android:text="@string/dialog_ok" />
        
    </LinearLayout>
    <ListView 
        android:layout_width="wrap_content"   
        android:layout_height="wrap_content" 
        android:background="#FFFFFF"
        android:cacheColorHint="#00000000"  
        android:layout_below="@id/select_versiontitle"   
        android:layout_above="@id/select_version_button"
        android:id="@+id/select_version_listview"
     /> 

</RelativeLayout>