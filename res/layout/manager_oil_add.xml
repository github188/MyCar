<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="46dip"
                android:layout_weight="1"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical|right"
                android:text="@string/manager_oil_car_name"
                android:textColor="@color/manager_text"
                android:textSize="@dimen/manager_list_item_title_textsize" >
            </TextView>
            <Spinner
                android:id="@+id/spinner_manager_oil_car_id"
                android:layout_width="0dip"
                android:layout_marginRight="30dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/spinner"
                android:gravity="center_vertical|left" 
                />
			</LinearLayout>
			<LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:orientation="horizontal" >
            <TextView
                android:layout_width="0dip"
                android:layout_height="46dip"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="@string/manager_oil_amount"
                android:textColor="@color/manager_text"
                android:textSize="@dimen/manager_list_item_title_textsize" >
            </TextView>
            <EditText
                android:id="@+id/edittext_manager_oil_amount"
                android:layout_width="0dip"
                android:layout_marginRight="30dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/main_edit"
                android:hint="@string/manager_oil_amount_hint"
                android:inputType="numberDecimal"
                android:maxLength="7"
                 android:textStyle="bold">
            </EditText>
            </LinearLayout>
             <LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:orientation="horizontal" >   

            <TextView
                android:layout_width="0dip"
                android:layout_height="46dip"
                android:layout_weight="1"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical|right"
                android:text="@string/manager_oil_price"
                android:textColor="@color/manager_text"
                android:textSize="@dimen/manager_list_item_title_textsize" >
            </TextView>
            
                <EditText
                android:id="@+id/edittext_manager_oil_price"
                android:layout_width="0dip"
                android:layout_marginRight="30dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/main_edit"
                android:hint="@string/manager_oil_price_hint"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:textStyle="bold" >
            </EditText>
				</LinearLayout>
                    
             <LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:orientation="horizontal" >       
            <TextView
                android:layout_width="0dip"
                android:layout_height="46dip"
                android:layout_weight="1"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical|right"
                android:text="@string/manager_oil_type"
                android:textColor="@color/manager_text"
                android:textSize="@dimen/manager_list_item_title_textsize" >
            </TextView>
            
                <Spinner
                android:id="@+id/spinner_manager_oil_type"
                android:layout_width="0dip"
                android:layout_marginRight="30dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/spinner"
                android:gravity="center_vertical|left" />
                
                </LinearLayout>
			<LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:orientation="horizontal" >
            <TextView
                android:layout_width="0dip"
                android:layout_height="46dip"
                android:layout_weight="1"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical|right"
                android:text="@string/licheng_dushu"
                android:textColor="@color/manager_text"
                android:textSize="@dimen/manager_list_item_title_textsize" >
            </TextView>
            <EditText
                android:id="@+id/edittext_manager_oil_mileage"
                android:layout_width="0dip"
                android:layout_marginRight="30dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="5dip"
                android:background="@drawable/main_edit"
                android:hint="@string/manager_oil_mileage_hint"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:textStyle="bold" />
            </LinearLayout>
			<LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:orientation="horizontal" >
            <TextView
                android:layout_width="0dip"
                android:layout_height="46dip"
                android:layout_weight="1"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical|right"
                android:text="@string/manager_expense_time"
                android:textColor="@color/manager_text"
                android:textSize="@dimen/manager_list_item_title_textsize" >
            </TextView>
            <EditText
                android:id="@+id/edittext_manager_oil_expense_time"
                android:layout_width="0dip"
                android:layout_marginRight="30dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/main_edit"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:gravity="center_vertical|left"
                android:textStyle="bold" >
            </EditText>
            </LinearLayout>
			<LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:orientation="horizontal" >
            <TextView
                android:layout_width="0dip"
                android:layout_height="46dip"
                android:layout_weight="1"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical|right"
                android:text="@string/manager_oil_remark"
                android:textColor="@color/manager_text"
                android:textSize="@dimen/manager_list_item_title_textsize" >
            </TextView>
            <EditText
                android:id="@+id/edittext_manager_oil_remark"
                
                android:layout_width="0dip"
                android:layout_marginRight="30dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/main_edit"
                android:maxLength="50"
                android:singleLine="true"
                android:textStyle="bold" >
            </EditText>
        	</LinearLayout>

            <Button
                android:id="@+id/manager_oil_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/main_button"
                android:paddingLeft="20dip"
                android:paddingRight="5dip"
                android:text="@string/manager_oil_save"
                android:textColor="@color/main_button_text_color"
                android:textSize="@dimen/main_button_textsize" />
    </LinearLayout>

