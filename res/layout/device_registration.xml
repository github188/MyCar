<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="gone"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="@dimen/custom_title_left"
            android:layout_marginBottom="@dimen/main_bottom_button_margin_bottom"
            android:text="@string/devregister_device_info"
            android:textSize="16dip"
            android:textColor="#3E85CE" />
	    <TableLayout 
		    android:id="@+id/serial_info_area"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical" >
		    <TableRow >
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:textSize="15dip"
			        android:textColor="@color/light_blue"
			        android:layout_weight="1.0"
			        android:text="@string/devregister_serialnumber" />
		        <TextView
		            android:id="@+id/tv_serial_number"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="15dip"
		            android:gravity="center"
		            android:layout_weight="3.0"
		            android:layout_marginLeft="@dimen/custom_title_left"
		            android:textColor="@color/light_blue"
		            android:text=""/>
     		</TableRow>
		    <TableRow >
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:textSize="15dip"
			        android:textColor="@color/light_blue"
			        android:layout_weight="1.0"
			        android:text="@string/devregister_serialnumber_status" />
		        <TextView
		            android:id="@+id/tv_serial_number_status"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="15dip"
		            android:gravity="center"
		            android:layout_weight="3.0"
		            android:layout_marginLeft="@dimen/custom_title_left"
		            android:textColor="@color/light_blue"
		            android:text=""/>
     		</TableRow>
	    </TableLayout>
    </LinearLayout>
    
    <!-- 设备注册信息区域 -->
   <TableLayout 
    android:id="@+id/middle_area"
    android:layout_below="@+id/top"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <TableRow >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:textColor="@color/light_blue"
	        android:layout_weight="1.0"
	        android:text="@string/devregister_family_name" />
	    <EditText 
	        android:layout_marginLeft="10dp"
	        android:layout_width="150dp"
	        android:layout_weight="2.0"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="5dp"
	        android:singleLine="true"/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="left"
		    android:textColor="#f00"
		    android:text="" />
     </TableRow>
    <TableRow >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:textColor="@color/light_blue"
	        android:layout_weight="1.0"
	        android:text="@string/devregister_name" />
	    <EditText 
	        android:layout_marginLeft="10dp"
	        android:layout_width="150dp"
	        android:layout_weight="2.0"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="5dp"
	        android:singleLine="true"/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="left"
		    android:textColor="#f00"
		    android:text="" />
     </TableRow>
    <TableRow >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:textColor="@color/light_blue"
	        android:layout_weight="1.0"
	        android:text="@string/devregister_address" />
	    <EditText 
	        android:layout_marginLeft="10dp"
	        android:layout_width="150dp"
	        android:layout_weight="2.0"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="5dp"
	        android:singleLine="true"/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="left"
		    android:textColor="#f00"
		    android:text="" />
     </TableRow>
    <TableRow >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:textColor="@color/light_blue"
	        android:layout_weight="1.0"
	        android:text="@string/devregister_phone" />
	    <EditText 
	        android:layout_marginLeft="10dp"
	        android:layout_width="150dp"
	        android:layout_weight="2.0"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="5dp"
	        android:singleLine="true"/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="left"
		    android:textColor="#f00"
		    android:text="" />
     </TableRow>
    <TableRow >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:textColor="@color/light_blue"
	        android:layout_weight="1.0"
	        android:text="@string/devregister_device_name" />
	    <EditText 
	        android:id="@+id/edt_bluetooth_name"
	        android:layout_marginLeft="10dp"
	        android:layout_width="150dp"
	        android:layout_weight="2.0"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="5dp"
	        android:singleLine="true"/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="left"
		    android:textColor="#f00"
		    android:text="*" />
     </TableRow>
    <TableRow >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:textColor="@color/light_blue"
	        android:layout_weight="1.0"
	        android:text="@string/devregister_dev_passwd" />
	    <EditText 
	        android:id="@+id/edt_diag_password"
	        android:layout_marginLeft="10dp"
	        android:layout_width="150dp"
	        android:layout_weight="2.0"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="5dp"
	        android:singleLine="true"/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="left"
		    android:textColor="#f00"
		    android:text="*" />
     </TableRow>
     </TableLayout>
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:layout_weight="1" >
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:gravity="center"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/bt_dev_activate_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_button"
            android:text="@string/devregister_goback"
            android:textColor="@color/white"
            android:layout_marginRight="47dip"
            android:textSize="@dimen/main_button_textsize" />
        <Button
            android:id="@+id/bt_activate_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_button"
            android:text="@string/devregister_activate"
            android:textColor="@color/white"
            android:textSize="@dimen/main_button_textsize" />
    </LinearLayout>
</RelativeLayout>